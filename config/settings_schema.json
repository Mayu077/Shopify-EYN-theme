      },
      {
        "type": "checkbox",
        "id": "show_social_links",
        "label": "Show Social Media Links",
        "default": true
      },
      {
        "type": "url",
        "id": "facebook_url",
        "label": "Facebook URL"
      },
      {
        "type": "url",
        "id": "twitter_url",
        "label": "Twitter URL"
      },
      {
        "type": "url",
        "id": "instagram_url",
        "label": "Instagram URL"
      },
      {
        "type": "url",
        "id": "pinterest_url",
        "label": "Pinterest URL"
      }
    ]
  },
  {
    "name": "Homepage",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_hero_banner",
        "label": "Show Hero Banner",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_carousel",
        "label": "Show Carousel Slideshow",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_featured_collections",
        "label": "Show Featured Collections",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_featured_products",
        "label": "Show Featured Products",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_newsletter",
        "label": "Show Newsletter Signup",
        "default": true
      }
    ]
  },
  {
    "name": "Product Pages",
    "settings": [
      {
        "type": "select",
        "id": "product_image_zoom",
        "label": "Product Image Zoom",
        "options": [
          {
            "value": "lightbox",
            "label": "Lightbox"
          },
          {
            "value": "zoom",
            "label": "Zoom on Hover"
          },
          {
            "value": "none",
            "label": "None"
          }
        ],
        "default": "lightbox"
      },
      {
        "type": "checkbox",
        "id": "show_related_products",
        "label": "Show Related Products",
        "default": true
      },
      {
        "type": "range",
        "id": "related_products_count",
        "label": "Number of Related Products",
        "min": 2,
        "max": 8,
        "step": 1,
        "default": 4
      },
      {
        "type": "checkbox",
        "id": "show_social_sharing",
        "label": "Show Social Sharing",
        "default": true
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart Type",
